<div class="row">
  <div class="col-md-6">
    <h2 style="color:whitesmoke">Login</h2>

    <form class="form login-form">
      <div class="blurred-box"></div>
      <div class="form-group">
        <label for="email-login" style="color:whitesmoke">email:</label>
        <input class="form-input" type="text" id="email-login" />
      </div>
      <div class="form-group">
        <label for="password-login" style="color:whitesmoke">password:</label>
        <input class="form-input" type="password" id="password-login" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit" style="color:whitesmoke">login</button>
      </div>
    </form>
  </div>
  <div class="col-md-6">
    <h2 style="color:whitesmoke">Signup</h2>

    <form class="form signup-form">
      <div class="form-group">
        <label for="name-signup" style="color:whitesmoke">name:</label>
        <input class="form-input" type="text" id="name-signup" />
      </div>
      <div class="form-group">
        <label for="email-signup" style="color:whitesmoke">email:</label>
        <input class="form-input" type="text" id="email-signup" />
      </div>
      <div class="form-group">
        <label for="password-signup" style="color:whitesmoke">password:</label>
        <input class="form-input" type="password" id="password-signup" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit" style="color:whitesmoke">signup</button>
      </div>
    </form>
  </div>
</div>

<script src="./js/login.js"></script>
